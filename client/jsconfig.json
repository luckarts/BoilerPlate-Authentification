{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2016",
        "jsx": "react",
        "checkJs": true,
        "experimentalDecorators": true,
        "baseUrl": "./src",
        "paths": {
            "components/*": ["components/*"],
            "views/*": ["views/*"],
            "store/*": ["store/*"],
            "Utils/*": ["Utils/*"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/node_modules/*"]
}